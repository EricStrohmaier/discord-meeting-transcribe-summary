{
  "name": "discord-meeting-transcribe-summary",
  "version": "2.0.0",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc && pnpm run copy-config",
    "build:watch": "tsc --watch",
    "copy-config": "copyfiles -u 1 config/**/*.json dist/",
    "prebuild": "pnpm run clean",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts --max-warnings=0",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prestart": "pnpm run build",
    "validate": "pnpm run type-check && pnpm run lint && pnpm run format:check",
    "reprocess": "node dist/scripts/reprocessMeeting.js"
  },
  "type": "commonjs",
  "keywords": [
    "discord",
    "bot",
    "transcription",
    "audio",
    "voice",
    "ai",
    "openai",
    "typescript",
    "whisper",
    "gpt-4",
    "meeting-bot",
    "voice-recording"
  ],
  "author": "EricStrohmaier",
  "contributors": [
    "Claude Code (TypeScript migration)"
  ],
  "license": "MIT",
  "description": "A professional TypeScript Discord bot that records voice channel meetings, transcribes them using OpenAI's Whisper API, and generates AI-powered summaries with GPT-4o",
  "dependencies": {
    "@discordjs/voice": "^0.18.0",
    "async-lock": "^1.4.1",
    "config": "^3.3.12",
    "discord.js": "^14.18.0",
    "dotenv": "^16.4.7",
    "ffmpeg-static": "^5.2.0",
    "openai": "^4.85.4",
    "opusscript": "^0.1.1",
    "prism-media": "^1.3.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "ffmpeg-static"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/async-lock": "^1.4.2",
    "@types/config": "^3.3.5",
    "@types/ffmpeg-static": "^3.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.22.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
