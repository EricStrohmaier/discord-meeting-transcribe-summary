{
  "name": "weekly-transcription-bot",
  "version": "1.2.0",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc && npm run copy-config",
    "build:watch": "tsc --watch",
    "copy-config": "copyfiles -u 1 config/**/*.json dist/",
    "prebuild": "npm run clean",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts --max-warnings=0",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prestart": "npm run build",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run test"
  },
  "type": "commonjs",
  "keywords": [
    "discord",
    "bot",
    "transcription",
    "audio",
    "voice",
    "ai",
    "openai",
    "typescript"
  ],
  "author": "jakubkobus",
  "license": "MIT",
  "description": "A Discord bot that records voice channel meetings, transcribes them using OpenAI's Whisper API, and generates AI-powered summaries",
  "dependencies": {
    "@discordjs/voice": "^0.18.0",
    "async-lock": "^1.4.1",
    "config": "^3.3.12",
    "discord.js": "^14.18.0",
    "dotenv": "^16.4.7",
    "ffmpeg-static": "^5.2.0",
    "openai": "^4.85.4",
    "prism-media": "^1.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/async-lock": "^1.4.2",
    "@types/config": "^3.3.6",
    "@types/ffmpeg-static": "^3.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.22.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
